<Application x:Class="SimplePhotoViewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:simplePhotoViewer="clr-namespace:SimplePhotoViewer">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ColorsAndBrushes.xaml" />
                <ResourceDictionary Source="Resources/DefaultStyles.xaml" />
                <ResourceDictionary Source="Resources/NamedStyles.xaml" />
                <ResourceDictionary>
                    <simplePhotoViewer:AppBootstrapper x:Key="Bootstrapper"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
